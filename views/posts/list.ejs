<!DOCTYPE html>
<html>

<head>
    <title> List of Posts </title>
</head>

<body>
    <%for (const item of data) {%>
        <a href="/posts/comment/<%= category%>/<%= item["post_id"]%>"> <%= item["title"]%> </a>
        <br />
        <%if (user===item["username"]) {%>
            <form method="POST" action="/posts/delete/<%=item["post_id"]%>/<%=category%>">
                    <button type="submit"> Delete </button>
            </form>
            <a href="/posts/edit/<%=category%>/<%= item["post_id"]%>"> Edit </a>
            <% } %>
                <p> by user <%= item["username"]%>
                </p>
                <br />
                <br />
                <% } %>
                    <a href="/posts/new/<%=category%>"> create new post </a>
                    <br />
                    <a href="/"> homepage </a>
</body>

</html>